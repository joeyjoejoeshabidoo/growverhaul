<?xml version="1.0" encoding="UTF-8"?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Alpha Biomes</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
            	<li Class="PatchOperationAdd">
            		<xpath>/Defs</xpath>
            		<value>
            			<RecipeDef>
    								<defName>SG_ParchedMudRecipe</defName>
    								<label>make parched mud from mud and compost</label>
    								<description>Make parched mud x1 from mud and compost.</description>
    								<jobString>Making parched mud.</jobString>
    								<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    								<effectWorking>CutStone</effectWorking>
    								<soundWorking>Recipe_MakeStoneBlocks</soundWorking>
    								<allowMixingIngredients>true</allowMixingIngredients>
    								<workAmount>200</workAmount>
    								<targetCountAdjustment>10</targetCountAdjustment>
    								<ingredients>
      								<li>
        								<filter>
          								<thingDefs>
          									<li>WHC_Compost</li>
         								 </thingDefs>
     								   </filter>
     								   <count>2</count>
   								   </li>
   								   <li>
   								   	<filter>
  								    		<thingDefs>
      											<li>SG_Mud</li>
     								 		</thingDefs>
    								  	</filter>
    								  	<count>1</count>
   								   </li>
  								  </ingredients>
  								  <fixedIngredientFilter>
  								    <thingDefs>
    								  	<li>WHC_Compost</li>
   								   		<li>SG_Mud</li>
  								    </thingDefs>
 								   </fixedIngredientFilter>
 								   <products>
  								    <SG_DepletedSoil>1</SG_DepletedSoil>
  								  </products>
 								   <recipeUsers>
 								     <li>SG_GardeningTable</li>
 								   </recipeUsers>
								  </RecipeDef>
            		</value>
            	</li>

            	<li Class="PatchOperationAdd">
            		<xpath>/Defs</xpath>
            		<value>
            			<RecipeDef>
    								<defName>SG_MycoticSoilRecipe</defName>
    								<label>make mycotic soil from stony soil and raw fungus</label>
    								<description>Make mycotic soil x1 from stony soil and raw fungus.</description>
    								<jobString>Making mycotic soil.</jobString>
    								<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    								<effectWorking>CutStone</effectWorking>
    								<soundWorking>Recipe_MakeStoneBlocks</soundWorking>
    								<allowMixingIngredients>true</allowMixingIngredients>
    								<workAmount>200</workAmount>
    								<targetCountAdjustment>10</targetCountAdjustment>
    								<ingredients>
      								<li>
        								<filter>
          								<thingDefs>
          									<li>AB_PinkRawFungus</li>
          									<li>AB_BlueRawFungus</li>
          									<li>AB_PurpleRawFungus</li>
         								 </thingDefs>
     								   </filter>
     								   <count>10</count>
   								   </li>
   								   <li>
   								   	<filter>
  								    		<thingDefs>
      											<li>SR_Gravel</li>
     								 		</thingDefs>
    								  	</filter>
    								  	<count>10</count>
   								   </li>
  								  </ingredients>
  								  <fixedIngredientFilter>
  								    <thingDefs>
    								  	<li>AB_PinkRawFungus</li>
          							<li>AB_BlueRawFungus</li>
          							<li>AB_PurpleRawFungus</li>
   								   		<li>SR_Gravel</li>
  								    </thingDefs>
 								   </fixedIngredientFilter>
 								   <products>
  								    <SG_MycoticSoil>1</SG_MycoticSoil>
  								  </products>
 								   <recipeUsers>
 								     <li>SG_GardeningTable</li>
 								   </recipeUsers>
								  </RecipeDef>
            		</value>
            	</li>
            </operations>
         </match>
    </Operation>
</Patch>
