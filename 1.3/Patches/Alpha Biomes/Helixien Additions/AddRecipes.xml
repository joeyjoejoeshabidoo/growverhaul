<?xml version="1.0" encoding="UTF-8"?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Alpha Biomes</li>
        </mods>
        <match Class="PatchOperationFindMod">
          <mods>
            <li>Helixien Additions</li>
          </mods>
        <match Class="PatchOperationSequence">
            <operations>
            	<li Class="PatchOperationAdd">
            		<xpath>/Defs</xpath>
            		<value>
            			<RecipeDef>
    								<defName>SG_TarredMudRecipe</defName>
    								<label>make tarred mud from mud and tar bucket</label>
    								<description>Make tarred mud x10 from mud and tar bucket.</description>
    								<jobString>Making tarred mud.</jobString>
    								<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    								<effectWorking>CutStone</effectWorking>
    								<soundWorking>Recipe_MakeStoneBlocks</soundWorking>
    								<allowMixingIngredients>true</allowMixingIngredients>
    								<workAmount>200</workAmount>
    								<targetCountAdjustment>10</targetCountAdjustment>
    								<ingredients>
      								<li>
        								<filter>
          								<thingDefs>
          									<li>HA_Tar</li>
         								 </thingDefs>
     								   </filter>
     								   <count>10</count>
   								   </li>
   								   <li>
   								   	<filter>
  								    		<thingDefs>
      											<li>SG_Mud</li>
     								 		</thingDefs>
    								  	</filter>
    								  	<count>10</count>
   								   </li>
  								  </ingredients>
  								  <fixedIngredientFilter>
  								    <thingDefs>
    								  	<li>HA_Tar</li>
   								   		<li>SG_Mud</li>
  								    </thingDefs>
 								   </fixedIngredientFilter>
 								   <products>
  								    <SG_TarredMud>10</SG_TarredMud>
  								  </products>
 								   <recipeUsers>
 								     <li>SG_GardeningTable</li>
 								   </recipeUsers>
								  </RecipeDef>
            		</value>
            	</li>

              <li Class="PatchOperationAdd">
                <xpath>/Defs</xpath>
                <value>
                  <RecipeDef>
                    <defName>SG_TarredMudExtractionRecipe</defName>
                    <label>make tar bucket from tarred mud</label>
                    <description>Make tar bucket x5 from tarred mud.</description>
                    <jobString>Extracting tarred mud.</jobString>
                    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
                    <effectWorking>CutStone</effectWorking>
                    <soundWorking>Recipe_MakeStoneBlocks</soundWorking>
                    <allowMixingIngredients>true</allowMixingIngredients>
                    <workAmount>200</workAmount>
                    <targetCountAdjustment>10</targetCountAdjustment>
                    <ingredients>
                     <li>
                      <filter>
                          <thingDefs>
                            <li>SG_TarredMud</li>
                        </thingDefs>
                        </filter>
                        <count>10</count>
                     </li>
                    </ingredients>
                    <fixedIngredientFilter>
                      <thingDefs>
                        <li>SG_TarredMud</li>
                      </thingDefs>
                   </fixedIngredientFilter>
                   <products>
                      <HA_Tar>5</HA_Tar>
                    </products>
                   <recipeUsers>
                     <li>SG_GardeningTable</li>
                   </recipeUsers>
                  </RecipeDef>
                </value>
              </li>
            </operations>
        </match>
        </match>
    </Operation>
</Patch>
